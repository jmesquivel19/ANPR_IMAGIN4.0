<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.esquivel.anpr_imagin.SalidaActivity"
    android:background="#ffd2fcff">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlaca2"
        android:layout_below="@+id/textView30"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="20dp"
        android:inputType="textCapCharacters|textCapWords|textCapSentences|textAutoComplete|textAutoCorrect"
        android:textStyle="bold|italic" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnCamaraS"
        android:src="@drawable/camera18"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnVozS"
        android:src="@drawable/mic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibtnBuscarS"
        android:src="@drawable/search54"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REGISTRO SALIDA DE VEHÍCULOS"
        android:id="@+id/textView29"
        android:textStyle="bold|italic"
        android:textColor="#ffff0400"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/ibtnBuscarS"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="PLACA:"
        android:id="@+id/textView30"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#ffff001b"
        android:textStyle="bold|italic"
        android:layout_marginTop="30dp" />

</RelativeLayout>
